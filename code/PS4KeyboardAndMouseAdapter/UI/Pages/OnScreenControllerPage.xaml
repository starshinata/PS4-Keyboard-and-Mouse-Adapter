<UserControl
    x:Class="Pizza.KeyboardAndMouseAdapter.UI.Pages.OnScreenControllerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

    xmlns:controls="clr-namespace:Pizza.KeyboardAndMouseAdapter.UI.Controls.OnScreenController"

    GotFocus="GotFocusLocal"
    >

    <ScrollViewer Margin="0,0,0,0">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="350px" />
                <RowDefinition Height="15px" />
                <RowDefinition Height="230px" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="62*"/>
                <ColumnDefinition Width="30px"/>
                <ColumnDefinition Width="129*"/>
            </Grid.ColumnDefinitions>

            <controls:GamepadMouseInput
                x:Name="gamepadMouseInputInner"
                Grid.Row="0"  
                Grid.Column="0"  
                Grid.ColumnSpan="3"/>

           

        </Grid>
    </ScrollViewer>

</UserControl>
