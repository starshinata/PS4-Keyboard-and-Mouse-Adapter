<UserControl
    x:Class="Pizza.KeyboardAndMouseAdapter.UI.Pages.MiscellaneousSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

    xmlns:ui_controls_common="clr-namespace:Pizza.KeyboardAndMouseAdapter.UI.Controls.Common"
    xmlns:ui_controls_MiscellaneousSettingsPage="clr-namespace:Pizza.KeyboardAndMouseAdapter.UI.Controls.MiscellaneousSettingsPage"
    >

    <ScrollViewer
        HorizontalScrollBarVisibility="Auto"
        VerticalScrollBarVisibility="Auto"
        x:Name="scrollViewer">

        <StackPanel Width="650">
            
            <ui_controls_MiscellaneousSettingsPage:MiscellaneousSettingsGeneralControl/>
            
            <!-- spacer -->
            <TextBlock/>
            <TextBlock/>
            
            <ui_controls_MiscellaneousSettingsPage:RemotePlayToolbarSettingsControl/>

            <!-- spacer -->
            <TextBlock/>
            <TextBlock/>
            
            <ui_controls_common:LogControl/>

            <!-- spacer -->
            <TextBlock/>
            <TextBlock/>

            <ui_controls_MiscellaneousSettingsPage:GamepadUpdaterNoSleepControl/>

            <!-- spacer -->
            <TextBlock/>
            <TextBlock/>

            <ui_controls_MiscellaneousSettingsPage:ColourSchemeToggleControl/>

        </StackPanel>

    </ScrollViewer>

</UserControl>
