<UserControl
    x:Class="Pizza.KeyboardAndMouseAdapter.UI.Controls.OnScreenController.AnalogStickMouseInput"
    x:Name="This"

    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    
    d:DesignHeight="200" 
    d:DesignWidth="230"
    mc:Ignorable="d" 
    >

    <Grid>
        <Canvas 
            x:Name="canvas" 
            Grid.Column="0"

            MouseDown="Canvas_MouseDown"
            MouseLeave="Canvas_MouseLeave"
            MouseMove="Canvas_MouseMove"
            MouseUp="Canvas_MouseUp"
            >

            <Ellipse x:Name="shapeCircle"
                Height="50px"
                Width="50px"
                Fill="Black"
                Stroke="#f0f0f0"
                Canvas.Left="0"
                Canvas.Top="0"
                StrokeThickness="0"/>

            <!-- FYI on window RESIZE, the code will align this properly -->
            <Ellipse x:Name="shapeCenter"
                Height="10" 
                Width="10"
                Fill="#f0f0f0" 
                Canvas.Left="25" 
                Canvas.Top="25"
                />
        </Canvas>

    </Grid>
</UserControl>
