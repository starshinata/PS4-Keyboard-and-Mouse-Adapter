<UserControl
    x:Class="Pizza.KeyboardAndMouseAdapter.UI.Controls.OnScreenController.AnalogStickMouseInputs"
    x:Name="This"

    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

    xmlns:controls="clr-namespace:Pizza.KeyboardAndMouseAdapter.UI.Controls.OnScreenController"
    xmlns:wpfspark="clr-namespace:WPFSpark;assembly=WPFSpark" 
    
    d:DesignHeight="200" 
    d:DesignWidth="200"
    mc:Ignorable="d" 
    >

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70px" />
            <ColumnDefinition Width="50*"  />
            <ColumnDefinition Width="30px" />
            <ColumnDefinition Width="50*"  />
            <ColumnDefinition Width="70px" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <!-- TODO do we want ? -->
            <RowDefinition Height="0px"  />
            <RowDefinition Height="31px" />
            <RowDefinition Height="31px" />
            <RowDefinition Height="31px" />
            <RowDefinition Height="1*" MinHeight="100px" />
        </Grid.RowDefinitions>


        <!-- TODO do we want ? -->
        <!-- if we enable this  this row is defined as 0px high -->
        <!-- https://www.codeproject.com/Articles/1060961/WPFSpark-v -->
        <wpfspark:ToggleSwitch
            x:Name="toggleEnableOnscreenSticks"
            Grid.Row="0"
            Grid.Column="0"
            Background="black"
            BorderThickness="2px"
            IsChecked="{Binding Path=InstanceSettings.EnableOnscreenSticks, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Height="30"
            HorizontalAlignment="Left"
            Style="{StaticResource {ComponentResourceKey ResourceId=ToggleSwitch.iOS.Light.Style, TypeInTargetAssembly={x:Type wpfspark:ToggleSwitch}}}" 
            VerticalAlignment="Top"
            Visibility="Collapsed"
            Width="60"/>

        <!-- TODO do we want ? -->
        <!-- if we enable this  this row is defined as 0px high -->
        <TextBlock 
            Grid.Row="0"
            Grid.Column="1"
            Grid.ColumnSpan="4"
            Text="toggleEnableOnscreenSticks"
            TextWrapping="Wrap"
            VerticalAlignment="Center"
            Visibility="Collapsed"
            />


        <!-- https://www.codeproject.com/Articles/1060961/WPFSpark-v -->
        <wpfspark:ToggleSwitch
             x:Name="toggleOnscreenSticksClickRequired"
            Grid.Row="1"
            Grid.Column="0"
            
            Background="black"
            BorderThickness="2px"
            IsChecked="{Binding Path=InstanceSettings.OnscreenSticksClickRequired, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Height="30"
            HorizontalAlignment="Left"
            Style="{StaticResource {ComponentResourceKey ResourceId=ToggleSwitch.iOS.Light.Style, TypeInTargetAssembly={x:Type wpfspark:ToggleSwitch}}}" 
            VerticalAlignment="Top"
            Width="60"/>

        <TextBlock 
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="4"
            Text="On-Screen sticks require clicks? (If disabled you can just hover over the below sticks)"
            TextWrapping="Wrap"
            VerticalAlignment="Center"
            />

        <!-- LEFT HALF -->
        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="2"

            Text="Left Stick"
            TextWrapping="Wrap"
            TextAlignment="Center"
            />

        <controls:AnalogStickMouseInput
            x:Name="stickLeft"
            Grid.Row="4"  
            Grid.Column="0"
            Grid.ColumnSpan="2"
            />

        <!-- RIGHT HALF -->

        <TextBlock 
            Grid.Row="3"
            Grid.Column="3"
            Grid.ColumnSpan="2"
            
            Text="Right Stick"
            TextWrapping="Wrap"
            TextAlignment="Center"
            />

        <controls:AnalogStickMouseInput
            x:Name="stickRight"
            Grid.Row="4"  
            Grid.Column="3"  
            Grid.ColumnSpan="2"
            />

    </Grid>

</UserControl>
