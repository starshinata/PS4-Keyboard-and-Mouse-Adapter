<UserControl
    x:Class="Pizza.KeyboardAndMouseAdapter.UI.Controls.AdvancedMappingsPage.ControllerInput"

    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    
    d:DesignHeight="700" 
    d:DesignWidth="680"
    mc:Ignorable="d" 
    >

    <StackPanel

        Orientation="Horizontal"
        Width="230">

        <ComboBox 
            x:Name="combobox"
            Width="130"
            >
        </ComboBox>

        <Button 
            Click="Button_RemoveThis"
            Width="100px"
            >
            Remove Input
        </Button>

    </StackPanel>
</UserControl>
